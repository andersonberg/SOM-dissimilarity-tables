\setbeamercolor{section in head/foot}{parent=palette quaternary}
\setbeamercolor{subsection in head/foot}{parent=palette primary}

\setbeamercolor{author in head/foot}{parent=palette quaternary}
\setbeamercolor{title in head/foot}{parent=palette primary}

\defbeamertemplate*{footline}{NCSU theme}
{
  \vskip0pt%
   \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.2\paperwidth,ht=22pt,dp=1.125ex]{title in head/foot}%    
    \includegraphics[height=20pt]{./figuras/logo-cin3.png}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.8\paperwidth,ht=22pt,dp=1.125ex,leftskip=.2cm,rightskip=.2cm]{author in head/foot}%
    \usebeamerfont{author in head/foot}%      
      \hfill%
\tiny{       
      \insertshortauthor \hspace{.05cm}
      \hfill%
      \insertshorttitle%
      \hfill%
      \insertframenumber{} / \inserttotalframenumber}%
      \vspace*{6.5pt}%
  \end{beamercolorbox}%
  }%
  \vskip0pt%
}

